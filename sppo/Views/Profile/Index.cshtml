@model IEnumerable<sppo.Models.ProfileVM>

@{

}


<table class="table table-hover">
    <thead>
        <tr>
            <td>Username</td>
            <td>Email</td>
            <td>ProfilePicture</td>
          
        </tr>
    </thead>
    <tbody>
        @foreach (ProfileVM s in Model)
        {
            var picturePath = "~/images/" + (s.ProfilePicture ?? "noimage.jpg");

            <tr>
                <td>@s.Username</td>
                <td>@s.Email</td>
                <td><img src=@picturePath asp-append-version="true" class="rounded-circle" height="40" width="40" alt="Picture not loaded." />
            </tr>
        }
    </tbody>
</table>

<style>
    img {
        width: 50px;
        height: 50px;
        border: 1px solid black;
        float: left;
        margin: 10px;
    }
</style>